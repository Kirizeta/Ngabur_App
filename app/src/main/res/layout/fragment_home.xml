            <androidx.cardview.widget.CardView
                android:id="@+id/jakarta"
                android:layout_width="50dp"
                android:layout_height="105dp"
                app:cardCornerRadius="15dp"
                android:layout_columnWeight="1"
                android:layout_rowWeight="1"
                android:layout_row="1"
                android:layout_column="0"
                android:backgroundTint="#EDE4F0"
                app:cardElevation="1dp">

                <LinearLayout
                    android:id="@+id/jakarta_label"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/jakarta_bro"
                        android:layout_width="82dp"
                        android:layout_height="65dp"
                        android:layout_gravity="center"
                        android:src="@drawable/jakarta"

                        />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Jakarta"
                        android:textColor="@color/black"
                        android:textSize="14sp"
                        android:layout_marginTop="5dp"
                        android:layout_gravity="center"
                        />


                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/jogja"
                android:layout_width="50dp"
                android:layout_height="105dp"
                app:cardCornerRadius="15dp"
                android:layout_columnWeight="1"
                android:layout_rowWeight="1"
                android:layout_row="1"
                android:layout_column="1"
                android:layout_marginLeft="15dp"
                app:cardElevation="1dp"
                android:backgroundTint="#F6E1DD">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:id="@+id/jogja_label"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="90dp"
                        android:layout_height="65dp"
                        android:layout_gravity="center"
                        android:src="@drawable/jogja"

                        />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Yogyakarta"
                        android:textColor="@color/black"
                        android:textSize="12sp"
                        android:layout_marginTop="5dp"
                        android:layout_gravity="center"
                        />


                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/bali"
                android:layout_width="50dp"
                android:layout_height="105dp"
                app:cardCornerRadius="15dp"
                android:layout_columnWeight="1"
                android:layout_rowWeight="1"
                android:layout_row="1"
                android:layout_column="2"
                android:layout_marginLeft="15dp"
                app:cardElevation="1dp"
                android:backgroundTint="#FFF9E7">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:id="@+id/bali_label"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="90dp"
                        android:layout_height="69dp"
                        android:src="@drawable/bali"
                        android:layout_gravity="center"
                        />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Bali"
                        android:textColor="@color/black"
                        android:textSize="14sp"
                        android:layout_marginTop="5dp"
                        android:layout_gravity="center"
                        />


                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/surabaya"
                android:layout_width="50dp"
                android:layout_height="105dp"
                app:cardCornerRadius="15dp"
                android:layout_columnWeight="1"
                android:layout_rowWeight="1"
                android:layout_row="2"
