<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    tools:context=".SearchHotel">

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/search_layout"
        android:stretchColumns="1"
        android:orientation="horizontal"
        android:paddingBottom="75dp">


        <EditText
            android:id="@+id/search_main1"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:layout_marginTop="46dp"
            android:layout_marginLeft="18dp"
            android:layout_marginRight="18dp"
            android:background="@drawable/searchbox"
            android:drawableStart="@drawable/search"
            android:drawablePadding="16dp"
            android:ems="10"
            android:hint="Search any hotel"
            android:inputType="text"
            android:padding="16dp"
            android:textColor="@color/black"
            android:textColorHint="@color/black"
            android:textSize="16sp" />



        <TextView
            android:id="@+id/java"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Java"
            android:textColor="@color/black"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_marginLeft="22dp"
            android:layout_marginTop="27dp"
            android:layout_marginRight="22dp"
            />


        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:rowCount="3"
            android:columnCount="3"
            android:layout_marginLeft="18dp"
            android:layout_marginRight="18dp"
            android:layout_marginTop="13dp">

            <androidx.cardview.widget.CardView
                android:id="@+id/jakarta"
                android:layout_width="98dp"
                android:layout_height="138dp"
                app:cardCornerRadius="15dp"
                android:layout_columnWeight="1"
                android:layout_rowWeight="1"
                android:layout_row="1"
                android:layout_column="0"
                android:backgroundTint="#EDE4F0"
                app:cardElevation="1dp">

                <LinearLayout
                    android:id="@+id/jakarta_label"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/jakarta_bro"
                        android:layout_width="115dp"
                        android:layout_height="90dp"
                        android:layout_gravity="center"
                        android:src="@drawable/jakarta"
                        />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Jakarta"
                        android:textColor="@color/black"
                        android:textSize="15sp"
                        android:layout_marginTop="12dp"
                        android:layout_gravity="center"
                        />


                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/bandung"
                android:layout_width="98dp"
                android:layout_height="138dp"
                app:cardCornerRadius="15dp"
                android:layout_columnWeight="1"
                android:layout_rowWeight="1"
                android:layout_row="1"
                android:layout_column="1"
                android:layout_marginLeft="15dp"
                app:cardElevation="1dp"
                android:backgroundTint="#E4EEE8">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:id="@+id/bandung_label"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="137dp"
                        android:layout_height="93dp"
                        android:src="@drawable/bandung"
                        android:layout_gravity="center"

                        />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Bandung"
                        android:textColor="@color/black"
                        android:textSize="15sp"
                        android:layout_marginTop="12dp"
                        android:layout_gravity="center"
                        />


                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/jogja"
                android:layout_width="98dp"
                android:layout_height="138dp"
                app:cardCornerRadius="15dp"
                android:layout_columnWeight="1"
                android:layout_rowWeight="1"
                android:layout_row="1"
                android:layout_column="2"
                android:layout_marginLeft="15dp"
                app:cardElevation="1dp"
                android:backgroundTint="#FFF9E7">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:id="@+id/jogja_label"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="130dp"
                        android:layout_height="95dp"
                        android:src="@drawable/jogja"
                        android:layout_gravity="center"

                        />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Yogyakarta"
                        android:textColor="@color/black"
                        android:textSize="15sp"
                        android:layout_marginTop="12dp"
                        android:layout_gravity="center"
                        />


                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/surabaya"
                android:layout_width="98dp"
                android:layout_height="138dp"
                app:cardCornerRadius="15dp"
                android:layout_columnWeight="1"
                android:layout_rowWeight="1"
                android:layout_row="2"
                android:layout_column="0"
                android:layout_marginTop="15dp"
                app:cardElevation="1dp"
                android:backgroundTint="#E6F0F5">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:id="@+id/surabaya_label"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="130dp"
                        android:layout_height="90dp"
                        android:src="@drawable/surabaya"
                        android:layout_gravity="center"
                        />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Surabaya"
                        android:textColor="@color/black"
                        android:textSize="15sp"
                        android:layout_marginTop="12dp"
                        android:layout_gravity="center"
                        />


                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/malang"
                android:layout_width="98dp"
                android:layout_height="138dp"
                app:cardCornerRadius="15dp"
                android:layout_columnWeight="1"
                android:layout_rowWeight="1"
                android:layout_row="2"
                android:layout_column="1"
                android:layout_marginTop="15dp"
                android:layout_marginLeft="15dp"
                app:cardElevation="1dp"
                android:backgroundTint="#F6E1DD">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:id="@+id/malang_label"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="130dp"
                        android:layout_height="90dp"
                        android:src="@drawable/malang"
                        android:layout_gravity="center"

                        />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Malang"
                        android:textColor="@color/black"
                        android:textSize="15sp"
                        android:layout_marginTop="12dp"
                        android:layout_gravity="center"
                        />


                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/semarang"
                android:layout_width="98dp"
                android:layout_height="138dp"
                app:cardCornerRadius="15dp"
                android:layout_columnWeight="1"
                android:layout_rowWeight="1"
                android:layout_row="2"
                android:layout_column="2"
                android:layout_marginTop="15dp"
                android:layout_marginLeft="15dp"
                app:cardElevation="1dp"
                android:backgroundTint="#EDE4F0">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:id="@+id/semarang_label"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="130dp"
                        android:layout_height="90dp"
                        android:src="@drawable/semarang"
                        android:layout_gravity="center"
                        />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Semarang"
                        android:textColor="@color/black"
                        android:textSize="15sp"
                        android:layout_marginTop="12dp"
                        android:layout_gravity="center"
                        />


                </LinearLayout>

            </androidx.cardview.widget.CardView>

        </GridLayout>

        <TextView
            android:id="@+id/sumatra"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Sumatra"
            android:textColor="@color/black"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_marginLeft="22dp"
            android:layout_marginTop="27dp"
            android:layout_marginRight="22dp"
            />

        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:rowCount="2"
            android:columnCount="3"
            android:layout_marginLeft="18dp"
            android:layout_marginRight="18dp"
            android:layout_marginTop="13dp">

            <androidx.cardview.widget.CardView
                android:id="@+id/padang"
                android:layout_width="98dp"
                android:layout_height="138dp"
                app:cardCornerRadius="15dp"
                android:layout_columnWeight="1"
                android:layout_rowWeight="1"
                android:layout_row="1"
                android:layout_column="0"
                android:backgroundTint="#FFF9E7"
                app:cardElevation="1dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:id="@+id/padang_label"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="130dp"
                        android:layout_height="90dp"
                        android:src="@drawable/padang"
                        android:layout_gravity="center"
                        />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Padang"
                        android:textColor="@color/black"
                        android:textSize="15sp"
                        android:layout_marginTop="12dp"
                        android:layout_gravity="center"
                        />


                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/aceh"
                android:layout_width="98dp"
                android:layout_height="138dp"
                app:cardCornerRadius="15dp"
                android:layout_columnWeight="1"
                android:layout_rowWeight="1"
                android:layout_row="1"
                android:layout_column="1"
                android:layout_marginLeft="15dp"
                app:cardElevation="1dp"
                android:backgroundTint="#C1E3F6">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:id="@+id/aceh_label"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="130dp"
                        android:layout_height="90dp"
                        android:src="@drawable/aceh"
                        android:layout_gravity="center"
                        />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Aceh"
                        android:textColor="@color/black"
                        android:textSize="15sp"
                        android:layout_marginTop="6dp"
                        android:layout_marginBottom="6dp"
                        android:layout_gravity="center"
                        />


                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/palembang"
                android:layout_width="98dp"
                android:layout_height="138dp"
                app:cardCornerRadius="15dp"
                android:layout_columnWeight="1"
                android:layout_rowWeight="1"
                android:layout_row="1"
                android:layout_column="2"
                android:layout_marginLeft="15dp"
                app:cardElevation="1dp"
                android:backgroundTint="#E4EEE8">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:id="@+id/palembang_label"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="130dp"
                        android:layout_height="90dp"
                        android:src="@drawable/palembang"
                        android:layout_gravity="center"
                        />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Palembang"
                        android:textColor="@color/black"
                        android:textSize="15sp"
                        android:layout_marginTop="12dp"
                        android:layout_gravity="center"
                        />


                </LinearLayout>

            </androidx.cardview.widget.CardView>



        </GridLayout>

        <TextView
            android:id="@+id/nusa"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Nusa Tenggara"
            android:textColor="@color/black"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_marginLeft="22dp"
            android:layout_marginTop="27dp"
            android:layout_marginRight="22dp"
            />

        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:rowCount="2"
            android:columnCount="3"
            android:layout_marginLeft="18dp"
            android:layout_marginRight="18dp"
            android:layout_marginTop="13dp">

            <androidx.cardview.widget.CardView
                android:id="@+id/bali"
                android:layout_width="98dp"
                android:layout_height="138dp"
                app:cardCornerRadius="15dp"
                android:layout_columnWeight="1"
                android:layout_rowWeight="1"
                android:layout_row="1"
                android:layout_column="0"
                android:backgroundTint="#EDE4F0"
                app:cardElevation="1dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:id="@+id/bali_label"
                    android:orientation="vertical"
                    >

                    <ImageView
                        android:layout_width="130dp"
                        android:layout_height="90dp"
                        android:src="@drawable/bali"
                        android:layout_gravity="center"
                        />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Bali"
                        android:textColor="@color/black"
                        android:textSize="15sp"
                        android:layout_marginTop="12dp"
                        android:layout_gravity="center"
                        />


                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/ntt"
                android:layout_width="98dp"
                android:layout_height="138dp"
                app:cardCornerRadius="15dp"
                android:layout_columnWeight="1"
                android:layout_rowWeight="1"
                android:layout_row="1"
                android:layout_column="1"
                android:layout_marginLeft="15dp"
                app:cardElevation="1dp"
                android:backgroundTint="#E6F0F5">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:id="@+id/ntt_label"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="130dp"
                        android:layout_height="90dp"
                        android:src="@drawable/ntt"
                        android:layout_gravity="center"

                        />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="NTT"
                        android:textColor="@color/black"
                        android:textSize="15sp"
                        android:layout_marginTop="12dp"
                        android:layout_gravity="center"
                        />


                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/ntb"
                android:layout_width="98dp"
                android:layout_height="138dp"
                app:cardCornerRadius="15dp"
                android:layout_columnWeight="1"
                android:layout_rowWeight="1"
                android:layout_row="1"
                android:layout_column="2"
                android:layout_marginLeft="15dp"
                app:cardElevation="1dp"
                android:backgroundTint="#FEF9E5">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:id="@+id/ntb_label"
                    >

                    <ImageView
                        android:layout_width="130dp"
                        android:layout_height="90dp"
                        android:src="@drawable/ntb"
                        android:layout_gravity="center"
                        />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="NTB"
                        android:textColor="@color/black"
                        android:textSize="15sp"
                        android:layout_marginTop="12dp"
                        android:layout_gravity="center"
                        />


                </LinearLayout>

            </androidx.cardview.widget.CardView>

        </GridLayout>

    </TableLayout>

</ScrollView>