<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    tools:context=".ProfileFragment">

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:stretchColumns="1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@color/ungumuda"
            android:elevation="2dp"
            >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            >

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="36dp"
                android:text="Profile"
                android:textSize="20sp"
                android:textStyle="bold"
                android:gravity="center"
                android:textColor="@color/white"/>


            <TextView
                android:textSize="0dp"
                android:layout_marginTop="18dp"
                android:layout_marginLeft="-100dp"
                android:id="@+id/member_prof"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:background="@drawable/white_box"
                />

        </LinearLayout>
            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/photo_prof"
                android:layout_width="122dp"
                android:layout_height="122dp"
                android:src="@drawable/profilepic"
                android:layout_gravity="center"
                android:layout_marginTop="26dp"
                android:layout_marginBottom="14dp"
               />


                
            <TextView
                android:id="@+id/name_prof"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="x"
                android:textSize="18dp"
                android:textStyle="bold"
                android:textColor="@color/white"
                android:gravity="center"
                />

            <TextView
                android:id="@+id/email_prof"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="x@email.com"
                android:textSize="14dp"
                android:textStyle="normal"
                android:textColor="@color/white"
                android:gravity="center"
                />

            <TextView
                android:id="@+id/phone_prof"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text=""
                android:textSize="0dp"
                android:textStyle="normal"
                android:textColor="@color/white"
                android:gravity="center"
                />

            <TextView
                android:id="@+id/dob_prof"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text=""
                android:textSize="0dp"
                android:textStyle="normal"
                android:textColor="@color/white"
                android:gravity="center"
                />

            <Button
                android:id="@+id/button_editprofile"
                android:layout_width="270dp"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_marginLeft="130dp"
                android:layout_marginTop="22dp"
                android:layout_marginRight="130dp"
                android:layout_marginBottom="22dp"
                android:background="@drawable/button_white"
                android:text="Edit Profile"
                android:textStyle="bold"
                android:textColor="@color/ungumuda"
                android:textSize="16sp"
                android:theme="@style/Button_white"/>

        </LinearLayout>



        <TextView
            android:id="@+id/headline"
            android:text="Mini Headline"
            android:background="@color/gray"
            android:textSize="14sp"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:paddingLeft="11dp"
            android:paddingTop="4dp"
            android:layout_marginTop="2dp"
            android:paddingBottom="4dp"/>

        <TextView
            android:id="@+id/popular"
            android:text="Popular"
            android:textSize="16sp"
            android:textColor="@color/black"
            android:paddingLeft="11dp"
            android:paddingRight="7dp"
            android:paddingTop="8dp"
            android:paddingBottom="8dp"
            android:drawableRight="@drawable/news_button"
            />

        <TextView
            android:id="@+id/trending"
            android:text="Trending"
            android:textSize="16sp"
            android:textColor="@color/black"
            android:paddingLeft="11dp"
            android:paddingRight="7dp"
            android:paddingTop="8dp"
            android:paddingBottom="8dp"
            android:drawableRight="@drawable/news_button"
            />

        <TextView
            android:id="@+id/today"
            android:text="Today"
            android:textSize="16sp"
            android:textColor="@color/black"
            android:paddingLeft="11dp"
            android:paddingRight="7dp"
            android:paddingTop="8dp"
            android:paddingBottom="8dp"
            android:drawableRight="@drawable/news_button"
            />

        <TextView
            android:id="@+id/content"
            android:text="Content"
            android:background="@color/gray"
            android:textSize="14sp"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:paddingLeft="11dp"
            android:paddingTop="4dp"
            android:paddingBottom="4dp"/>

        <TextView
            android:id="@+id/favourite"
            android:text="Favourite"
            android:textSize="16sp"
            android:textColor="@color/black"
            android:paddingLeft="11dp"
            android:paddingRight="7dp"
            android:paddingTop="8dp"
            android:paddingBottom="8dp"
            android:drawableRight="@drawable/news_button"
            android:drawableLeft="@drawable/heart"
            android:drawablePadding="7dp"
            />

<!--        <TextView-->
<!--            android:id="@+id/bookmark"-->
<!--            android:text="Bookmark"-->
<!--            android:textSize="16sp"-->
<!--            android:textColor="@color/black"-->
<!--            android:paddingLeft="10dp"-->
<!--            android:paddingRight="7dp"-->
<!--            android:paddingTop="8dp"-->
<!--            android:paddingBottom="8dp"-->
<!--            android:drawableRight="@drawable/news_button"-->
<!--            android:drawableLeft="@drawable/bookmark"-->
<!--            android:drawablePadding="5dp"-->
<!--            />-->





        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/button_logout"
            style="@android:style/Widget.Button"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:layout_marginLeft="100dp"
            android:layout_marginTop="30dp"
            android:layout_marginRight="100dp"
            android:layout_marginBottom="20dp"
            android:elevation="5dp"
            android:layout_weight="0.3"
            android:background="@drawable/intro_background"
            android:text="LOGOUT"
            android:textColor="@color/white"
            android:textSize="18sp"
            android:textStyle="bold" />

    </TableLayout>

</ScrollView>