<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.Ngabur" parent="Theme.Material3.DayNight.NoActionBar">
        <item name="colorPrimaryDark">@color/gray_name</item>
        <item name="colorPrimary">@color/ungumuda</item>
    </style>

    <style name="Theme.Ngabur" parent="Base.Theme.Ngabur" />

    <style name="Button_white" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/white</item>
        <item name="elevation">2dp</item>
    </style>

    <style name="textOrange" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/yellow</item>
        <item name="elevation">2dp</item>
    </style>

    <style name="textStyle" parent="Widget.AppCompat.TextView">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="textStyleBold" parent="Widget.AppCompat.TextView">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textStyle">bold</item>
    </style>
</resources>